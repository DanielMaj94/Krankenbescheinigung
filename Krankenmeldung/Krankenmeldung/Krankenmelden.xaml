<Window x:Class="Krankenmeldung.Krankenmelden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Krankenmelden" Height="300" Width="300">
    <Grid>
        <ComboBox Name="cbKlasse" HorizontalAlignment="Left" Margin="22,22,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=AlleKlassen}" SelectionChanged="cbKlasse_SelectionChanged"/>
        <ComboBox x:Name="cbSchueler" HorizontalAlignment="Left" Margin="22,61,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Path=listeSchueler}" SelectionChanged="cbKlasse_SelectionChanged"/>
    </Grid>
</Window>
